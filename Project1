      <table>
        <thead>
          <tr>
            <th class="header_function">Function</th>
            <th class="header_description">Description</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>Font-family</td>
            <td>
              Allows to pick up specific font-family to be applied to HTML
              element
            </td>
          </tr>
          <tr>
            <td>Font-weight</td>
            <td>
              Allows to pick up specific font-weight to be applied to HTML
              element
            </td>
          </tr>
          <tr>
            <td>Text-transform</td>
            <td>
              Allows to transform selected HTML element to uppercase or to
              lowecase
            </td>
          </tr>
          <tr>
            <td>Text-align</td>
            <td>
              Allows to align selected text either to center, left, right or
              justify
            </td>
          </tr>
        </tbody>
      </table>
